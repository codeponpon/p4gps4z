.container
  .row
    .col-md-4.col-md-offset-4
      .login-panel.panel.panel-default
        .panel-heading
          = image_tag('logos.png', width: 250)
        .panel-body
          = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :defaults => {:wrapper_html => {:class => 'form-group'}}) do |f|
            = f.error_notification
            %h2.text-center=t('signup.title')
            %fieldset
              .form-group
                = f.input :email, :required => true, :autofocus => true, :input_html => { :class => 'form-control' }
              .form-group
                = f.input :password, :required => true, :input_html => { :class => 'form-control' }
              .form-group
                = f.input :password_confirmation, :required => true, :input_html => { :class => 'form-control' }
              = f.hidden_field :time_zone, value: DateTime.now.zone.to_i
              = f.button :submit, t('signup.submit_btn'), :class => 'btn btn-lg btn-block btn-primary'
              %br
              %p.signup.center-block.text-center
                = t("signin.description")
                = link_to t("signin.title"), store_login_url, class: 'text-primary'