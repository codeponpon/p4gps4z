.row
  .small-6.large-centered.columns
    %h2= t("forgot_password.title")
    = simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f|
      = f.error_notification
      .form-inputs
        = f.input :email, :required => true, :autofocus => true, placeholder: t('forgot_password.hint')
      .form-actions
        = f.button :submit, t("forgot_password.submit_btn")
    = render "devise/shared/links"