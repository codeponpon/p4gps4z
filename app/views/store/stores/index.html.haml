.row
  .small-6.large-centered.columns
    %h2= t('signin.title')
    = simple_form_for(resource, :as => resource_name, :url => store_login_path(resource_name), :defaults => {:wrapper_html => {:class => 'form-group'}}) do |f|
      = f.error_notification
      = render "shared/flash_message", flash: flash
      = f.input :email, :required => false, :autofocus => true, :input_html => { :class => 'form-control' }
      = f.input :password, :required => false, :input_html => { :class => 'form-control' }
      = f.input :remember_me, inline_label: t('signin.remember_me'), label: false, :as => :boolean if devise_mapping.rememberable?
      = f.button :submit, t('signin.submit_btn'), :class => 'btn btn-lg btn-primary btn-block'
