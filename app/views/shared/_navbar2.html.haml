              = link_to t('menu.signout'), destroy_user_session_path, method: :delete
          - if current_user.blank?
            %li
              = link_to t("footer.menu.about"), about_url
            %li
              = link_to t('menu.login_with_facebook'), user_omniauth_authorize_path(:facebook)
