$fontAccessibility: "accessibility_foundicons";
$AccessibilityFoundicons: "AccessibilityFoundicons";
$classPrefixAccessibility: "foundicon-a-";

$fontGeneral: "general_foundicons";
$GeneralFoundicons: "GeneralFoundicons";
$classPrefixGeneral: "foundicon-g-";

$fontGeneralEnclosed: "general_enclosed_foundicons";
